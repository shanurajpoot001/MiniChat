<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mini Whatsapp</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <h3> All Chats</h3>
  <br>
  <form method="GET"  action="/chats/new">
    <button> New Chat</button>
  </form>
<br>
  <%for (let chat of chats) { %>
    <div class="chat">
      <p> From: <i><%= chat.from%></p>
       <div class="msg">
            <p><%= chat.msg%></p>  
            <br>
            <form method="GET"  action="/chats/<%=chat._id %>/edit">
              <button class="btn">Edit</button>
            </form>
            <br>
            <form method="POST"  action="/chats/<%=chat._id %>?_method=DELETE">
              <button class="btn">Delete</button>
            </form>
            <form action="/chats/<%= chat._id%>" method="GET">
              <button>show</button>
            </form>



       </div>
      <p>Received by: <i><%= chat.to%></p>
        <br>
        <p> <%=chat.created_at.toString().split(" ") [4] %></p>
        <br>
        <p> <%=chat.created_at.toString().split(" ").slice(0 , 4).join("-") %></p>
    </div>
    <hr>
    <br>
   <%} %>
</body>
</html>

